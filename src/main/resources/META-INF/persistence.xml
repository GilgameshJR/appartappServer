<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="appart" transaction-type="JTA">
    <jta-data-source>java:openejb/Resource/appart</jta-data-source>
    <non-jta-data-source>java:openejb/Resource/appart</non-jta-data-source>
    <properties>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
      <property name="openjpa.Compatibility=CheckDatabaseForCascadePersistToDetachedEntity" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
